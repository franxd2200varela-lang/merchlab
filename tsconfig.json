{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },

    "target": "ES2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}